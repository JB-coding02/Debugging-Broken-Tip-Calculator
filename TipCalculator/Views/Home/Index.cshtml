@model Calculator

@{
    ViewData["Title"] = "Tip Calculator";
}

<div asp-validation-summary="All"></div>

<form asp-action="Index" method="post">
    <div>
        <label asp-for="MealCost">Cost of meal:</label>
        <input asp-for="MealCost" />
    </div>
    <div>
        <label>15% tip:</label>
        <label>@String.Format("{0:c2}", ViewBag.Fifteen ?? 0)</label>
    </div>
    <div>
        <label>20% tip:</label>
        <label>@String.Format("{0:c2}", ViewBag.Twenty ?? 0)</label>
    </div>
    <div>
        <label>25% tip:</label>
        <label>@String.Format("{0:c2}", ViewBag.TwentyFive ?? 0)</label>
    </div>
    <div>
        <button type="submit">Calculate</button>
        <a asp-action="Index">Clear</a>
    </div>
</form>
